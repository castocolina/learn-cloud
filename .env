# Python Environment Configuration
PYTHONPATH=src/python
PYTHONPYCACHEPREFIX=tmp/pycache

# Pytest Configuration (equivalent to pytest.ini)
PYTEST_TESTPATHS=src/test/python
PYTEST_ADDOPTS=--verbose --tb=short
PYTEST_CACHE_DIR=tmp/pycache/.pytest_cache
PYTEST_FILTERWARNINGS=ignore::DeprecationWarning
PYTEST_PYTHON_FILES=test_*.py *_test.py
PYTEST_PYTHON_CLASSES=Test*
PYTEST_PYTHON_FUNCTIONS=test_*
PYTEST_COLLECT_IGNORE=tmp tmp/ tmp/*